{
  // Python settings (adjust pythonPath if venv isn't auto-detected)
  // "python.defaultInterpreterPath": "./venv/bin/python", // Or ./venv/Scripts/python.exe on Windows
  "python.analysis.typeCheckingMode": "basic", // Basic type checking

  // Editor settings
  "editor.formatOnSave": false, // Enable if you set up Prettier
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/venv": true,
    "**/*.pyc": true
  }
}